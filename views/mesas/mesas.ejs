                        <h5 class="card-title">Status: <%= mesa.status %></h5>
                        <h5 class="card-title">Cliente: <%= mesa.cliente ? mesa.cliente.nome:''%></h5>
                        <p class="card-text">ReferÃªncia: <%= mesa.referencia %></p>
                        <div class="text-center">
                            <a href="/mesas/<%= mesa._id %>" class="btn btn-primary">Visualizar</a>
                        </div>
                        
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>

