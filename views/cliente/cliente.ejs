<%- include("../partials/header") -%>

<div class="container">
    <div class="row">
        <div class="col">
            <h2>Nome: <%= cliente.nome %></h2>
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col text-center">
            <h3>Endereço</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-10">
            <h4>Endereço: <%= cliente.endereco %></h3>
        </div>
        <div class="col-2">
            <h4>Número: <%= cliente.numero %></h4>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <h4>Bairro: <%= cliente.bairro %></h3>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <h4>Complemento: <%= cliente.complemento %></h3>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <h4>Cidade: <%= cliente.cidade %></h3>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <h4>Celular 1: <%= cliente.celular1 %></h3>
        </div>
        <div class="col">
            <h4>Celular 2: <%= cliente.celular2 %></h3>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <h4>Telefone: <%= cliente.telefone %></h3>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <h4>Observação: <%= cliente.observacao %></h3>
        </div>
    </div>
    <div class="row">
        <div class="col-6"><a href="/clientes/<%= cliente._id %>/edit" class="btn btn-button btn-block btn-warning">Editar</a></div>
        <div class="col-6"><a href="/clientes/<%= cliente._id %>/delete" class="btn btn-button btn-block btn-danger" id="deletar">Excluir</a></div>
    </div>
</div>

<script src="/scripts/cliente/cliente.js"></script>

<%- include("../partials/footer") -%>