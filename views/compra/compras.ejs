<%- include("../partials/header") -%>

<div class="container mt-1">
    <div class="row">
        <div class="col-12">
            <form action="/compras" method="GET">
                <div class="row">
                    <div class="col">
                        <label for="dtIni">Data Inicial:</label>
                        <input type="datetime-local" class="form-control" aria-describedby="button-addon2" name="dtIni">
                    </div>
                    <div class="col">
                        <label for="dtIni">Data Fim:</label>
                        <input type="datetime-local" class="form-control" aria-describedby="button-addon2" name="dtFim">
                    </div>
                    <div class='col'>
                        <button class="btn btn-outline-secondary" type="submit">Pesquisar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <ul class="list-group my-2">
        <% compras.forEach(function(compra){ %>
        <li class="list-group-item">
            <div class="row">
                <div class="col-10"><%= compra.obs %> - <%= compra.dataC.toLocaleDateString("pt-BR") %></div>
                <div class="col"><a href="/compras/<%= compra._id%>"><button type="button"
                            class="btn btn-primary">Ver</button></a></div>
            </div>
        </li>
        <% }) %>
    </ul>
    <nav aria-label="Navegação de página exemplo" class="mt-2">
        <ul class="pagination justify-content-center">
            <li class="page-item"><a class="page-link"
                    href="/compras<%= parseInt(pagina)-1 < 0 ? '#' : '?pg='+(parseInt(pagina)-1) %>">Anterior</a></li>
            <li class="page-item"><a class="page-link" href="/compras?pg=<%= parseInt(pagina)+1 %>">Próxima</a></li>
        </ul>
    </nav>
</div>

<%- include("../partials/footer") -%>